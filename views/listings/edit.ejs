<%- layout("/layouts/boilerplate.ejs") %>
<body>
    <H1>Edit form:</H1>
    <form action="/listing/<%=data._id%>?_method=PUT" method="post">
        <!-- here added the div class='row' as to align all the input elements poperly -->
        <div class="row">
            <!-- to give some extra space done between 2 input elemetns used :- "mb-3" -->
            <div class="mb-3" >
                <!--adde this class:- form-label to labels and form-control to input to give bootstrap effect -->
                <label class="from-label" for="title">Tilte:</div>
             <input type="text" name="title" value="<%=data.title %>" class="form-control">
            </div>
    
            <div class="mb-3" >
              <label for="description" class="form-label">descrtion:</label>
              <textarea name="description" id=""   class="form-control"><%=data.description%></textarea>
            </div>
             <!-- added this div to put 2 input elements together  -->
            <div class="row ">
                <!-- price will take 3 columns in md or large or xl screen else all columns and country 6 col in mid or large or xl else all columns -->
                <div class="col-md-3 col-12">
                <label for="price" class="form-label">price:</label>
                <input type="number" name="price" value="<%=data.price%>" class="form-control">
            </div>
            <div class="col-md-6 col-12">
                <label for="country" class="form-label">country:</label>
                <input type="text" name="country" placeholder="<%=data.country%>" class="form-control">
            </div>
           
            </div>
          
            <div class="mb-3">
                <label for="location" class="form-label">location:</label>
               <input type="text" name="location" placeholder="<%=data.location%>" class="form-control">
        </div>
    
           <div class="mb-3">
            <label for="image" class="form-label">image:</label>
            <textarea name="image" id="" rows="5" cols="40"  class="form-control"><%=data.image%></textarea>
        </div>
        <button class="edit-btn">edit</button>
    </div>
           
      
    </form><br><br>

</body>
